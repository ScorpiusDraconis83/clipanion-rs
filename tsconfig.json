{
  "compilerOptions": {
    "customConditions": [
      "node"
    ],
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "lib": [
      "ES2022",
      "DOM"
    ],
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "noEmit": true,
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "noImplicitThis": true,
    "noUncheckedIndexedAccess": true,
    "strict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "target": "ES2022",
    "types": [
      "node",
      "vitest/globals"
    ]
  },
  "include": [
    "./**/*.tsx",
    "./**/*.ts"
  ]
}
