---
import "../styles/global.css";

import {getCollection} from 'astro:content';

const pages = await getCollection(`docs`);
---
<html lang="en">
  <head>
    <meta charset="UTF-8">
  </head>
  <body class={`bg-stone-100 flex gap-8 p-8 min-h-screen`}>
    <nav class={`bg-white border-stone-200 border rounded-sm p-8 flex-none w-64`}>
      <ul>
        {pages.map(page => (
          <li><a href={`/${page.id}`}>{page.data.sidebar.label}</a></li>
        ))}
      </ul>
    </nav>
    <main class={`bg-white border-stone-200 border rounded-sm p-8 flex-auto space-y-4`}>
      <slot />
    </main>
  </body>
</html>
