    "./package.json": "./package.json",
    ".": "./index.ts",
    "./extra": "./extra.ts"
  },
  "dependencies": {
    "@clipanion/tools": "workspace:^"
  },
  "peerDependencies": {
    "@expressive-code/core": "*"
  },
  "devDependencies": {
    "@expressive-code/core": "^0.41.3"
  },
  "publishConfig": {
    "exports": {
